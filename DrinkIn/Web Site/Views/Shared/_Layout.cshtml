<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DrinkIn</title>
    <script src="~/Scripts/Custom/JavaScript.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Custom/css")

    @if(ViewBag.Transparent == true)
    {
        <style>
            body{
                background: url('../../Media/night_street.jpg') no-repeat;
                background-size: cover;
            }
        </style>
    }
</head>
<body>
    @if (ViewBag.Transparent == true)
    {

        <!--< nav class="navbar navbar-expand-lg" id="mainNav" style="background: rgba(255, 106, 0, 0.1)">-->
        <nav class="navbar navbar-expand-lg bg-transparent" id="mainNav">
            <a class="navbar-brand" href="~/">
                <img id="nav-img" src="~/Media/logo.png">
            </a>
            <button class="navbar-toggler navbar-toggler-right btn btn-circle" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse">
                <h2 style="text-align: center;" class="text-white">Log In to profile</h2>
            </div>
            <!--<div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    @*<li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>*@



                    <li class="nav-item"><a href="#network" class="nav-link hvr-underline-from-center">Home</a></li>

                </ul>
            </div>-->
        </nav>
        <hr />
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="mainNav" style="position: fixed; overflow: hidden; top: 0; width: 100%; z-index: 100">
            <a class="navbar-brand" href="~/">
                <img id="nav-img" src="~/Media/logo.png">
            </a>
            <button class="navbar-toggler navbar-toggler-right btn btn-circle" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    @*<li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link hvr-underline-from-center" })</li>*@

                    <li class="nav-item"><a href="#network" class="nav-link hvr-underline-from-center">What is it?</a></li>
                    <li class="nav-item"><a href="#usability" class="nav-link hvr-underline-from-center">Usability</a></li>
                    <li class="nav-item"><a href="#features" class="nav-link hvr-underline-from-center">Features</a></li>
                    <li class="nav-item"><a href="#joinus" class="nav-link hvr-underline-from-center">Join us</a></li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    }



    <div class="">
        @RenderBody()
        <hr />
    </div>
    <footer style="text-align: center;">
        <p>&copy; @DateTime.Now.Year - DrinkIn. All rights reserved</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
